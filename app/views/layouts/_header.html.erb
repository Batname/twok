        <!---------->

        <div id="logo_gab">
          <div class="logo">
            <div class="logo-bg"><%= link_to image_tag("title-bg.png",), root_path %></div>
            <%= image_tag("title.png") %>
          </div>
        </div>

        <!---------->

        <div id="language">
          <div class="lang_table">
            <ul class="lang_tab">
              <li><%= link_to_unless_current "ENG", locale: "en"  %></li>
