    <!-----language------------>

    <div id="language">
      <div class="lang_table">
        <ul class="lang_tab">
          <li class="rus_list">
            <% if I18n.locale == :ru %>
            <% else %>
                <%= link_to('ru') do %>
                    <div class="rus_cont"></div>
                <% end %>
            <% end %>
          </li>
          <li class="eng_list">
            <% if I18n.locale == :en %>
            <% else %>
                <%= link_to('en') do %>
                    <div class="eng_cont"></div>
                <% end %>
            <% end %>
          </li>
          <li class="est_list">
            <% if I18n.locale == :es %>
            <% else %>
                <%= link_to('es') do %>
                    <div class="est_cont"></div>
                <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <!---------->

    <div id="logo_gab">
      <div class="logo">
        <div class="logo-bg"><%= image_tag("title-bg.png") %></div>
        <%= image_tag("title.png") %>
      </div>
    </div>




  </div>
</div>

  <% else %>
