      <div id="part_area">
        <a id="p7"></a>
        <div id="nav">
          <div id="main_nav">
            <ul>
              <li>
                <div id="menu_nav">
                  <ul>
                    <li><%= link_to "ABOUT", root_path %></li>
                    <li><%= link_to "SERVICES", root_path %></li>
                    <li><%= link_to "WORK", root_path %></li>
